from PIL import Image
image = Image.open("photo.jpg")
rotated_image = image.rotate(45)
rotated_image.save("rotated.jpg")
print("Ширина - ", image.width)
print("Высота - ", image.height)
print("Цветовая модель - ", image.mode)
cmyk_image = Image.open("lenna.jpg")
rgb_image = cmyk_image.convert("RGB")
rgb_image.save("rgb.jpg")
print("Ширина - ", rgb_image.width)
print("Высота - ", rgb_image.height)
print("Цветовая модель - ", rgb_image.mode)
red = Image.open("redmonro.jpg")
coordinates_red = ((200, 0, 0, 0))
cropped_red = red.crop(coordinates_red)
cropped_red.save("cropped_red.jpg")
green = Image.open("greenmonro.jpg")
coordinates_green_one = ((100, 0, 0, 0))
coordinates_green_two = ((0, 0, 100, 0))
cropped_green_one = green.crop(coordinates_green_one)
cropped_green_two = cropped_green_one.crop(coordinates_green_two)
cropped_green_two.save("cropped_green.jpg")
blue = Image.open("bluemonro.jpg")
coordinates_blue = ((0, 0, 200,0))
cropped_blue = blue.crop(coordinates_blue)
cropped_blue.save("cropped_blue.jpg")
new_image = Image.merge("RGB", (red, green, blue))
new_image.save("threemonro.jpg")
image1 = Image.open("cropped_red.jpg")
image2 = Image.open("cropped_green.jpg")
image3 = Image.blend(image1, image2, 0.5)